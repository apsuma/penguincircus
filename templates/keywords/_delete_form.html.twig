<form method="post" action="{{ path('keywords_delete', {'id': keyword.id}) }}" onsubmit="return confirm('Etes-vous sûr de vouloir supprimer ce mot-clé?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ keyword.id) }}">
    <button class="btn">Supprimer</button>
</form>
