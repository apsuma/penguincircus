{% extends 'base.html.twig' %}

{% block title %}Keywords{% endblock %}

{% block body %}
    <h1 class="text-center text-primary display-4">Mot-clé {{ keyword.name }}</h1>
    <div class="container">
        <div class="card">
            <ul class="list-group list-group-flush">
                {% for article in keyword.articles %}
                    <li class="list-group-item">
                        <a href="{{ path('admin_article_show', {'id': article.id}) }}">
                            {{ article.subject }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="row d-flex justify-content-between">
            <a href="{{ path('admin_keywords_index') }}">retour à la liste</a>
            <a href="{{ path('admin_keywords_edit', {'id': keyword.id}) }}"><i class="far fa-edit"></i></a>
            <a class="btn btn-primary">{{ include('keywords/_delete_form.html.twig') }}</a>
        </div>
    </div>
{% endblock %}
