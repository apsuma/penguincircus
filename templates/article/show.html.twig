{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ article.subject }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ article.picture }}</td>
            </tr>
            <tr>
                <th>ResaOpen</th>
                <td>{{ article.resaOpen ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>InFront</th>
                <td>{{ article.inFront ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ShowDate</th>
                <td>{{ article.showDate ? article.showDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_article_index') }}">back to list</a>

    <a href="{{ path('admin_article_edit', {'id': article.id}) }}"><i class="far fa-edit"></i></a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
