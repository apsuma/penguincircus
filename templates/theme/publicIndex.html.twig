{% extends 'base.html.twig' %}

{% block title %}Liste des themes pour le public{% endblock %}

{% block body %}
    <h1>Liste des themes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for theme in themes %}
            <tr>
                <td>{{ theme.id }}</td>
                <td>{{ theme.name }}</td>
                <td>{{ theme.slug }}</td>
                <td>
                    <a href="{{ path('admin_theme_show', {'slug': theme.slug}) }}"><i class="far fa-eye"></i></a>
                    <a href="{{ path('admin_theme_edit', {'slug': theme.slug}) }}"><i class="far fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_theme_new') }}"><i class="fas fa-plus-circle"></i></a>
{% endblock %}
