<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Penguin Antartic Circus - Home{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Lato&display=swap" rel="stylesheet">
        {% endblock %}
        {{ encore_entry_link_tags('app') }}
    </head>
    <body>
        {% block navBar %}
            {% if is_granted('ROLE_ADMIN') %}
                {% include('Blocks/_adminnavbar.html.twig') %}
            {% else %}
                {{ render(controller('App\\Controller\\ThemeController::renderNavbar')) }}
            {% endif %}
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        {{ encore_entry_script_tags('app') }}
    </body>
</html>
